{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.{js,jsx,ts,tsx,json,jsonc}"],
    "experimentalScannerIgnores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.next/**",
      "**/.turbo/**",
      "**/.vercel/**",
      "**/coverage/**",
      "**/*.config.js",
      "**/*.config.mjs",
      "pnpm-lock.yaml",
      "**/.env*"
    ]
  },
  "formatter": { "enabled": true, "indentStyle": "space", "indentWidth": 2, "lineWidth": 100 },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "a11y": { "recommended": true },
      "complexity": { "recommended": true },
      "correctness": { "noUnusedVariables": "error", "useExhaustiveDependencies": "warn" },
      "performance": { "recommended": true },
      "security": { "recommended": true },
      "style": { "useConst": "error", "useTemplate": "error" },
      "suspicious": { "noArrayIndexKey": "warn", "noExplicitAny": "warn" }
    }
  },
  "javascript": {
    "formatter": { "trailingCommas": "es5", "semicolons": "always", "quoteStyle": "single" }
  },
  "json": { "parser": { "allowComments": true }, "formatter": { "enabled": true } },
  "assist": { "enabled": true, "actions": { "source": { "organizeImports": "on" } } }
}
