{
  "buildCommand": "node scripts/prepare-npm-deploy.js && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "apps/web/.next",
  "framework": "nextjs",
  "functions": {
    "apps/web/src/app/api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_ENABLE_TESTNETS": "false",
    "NEXT_PUBLIC_DEFAULT_CHAIN": "1"
  }
}
